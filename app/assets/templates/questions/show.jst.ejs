<% var date = new Date(question.get('created_at')) %>

<div class="col-md-8">
  <h2 class=""><%= question.escape('body') %></h2>
  <p class="subheader-line">
    <a href="#/users/<%= question.get('author_id') %>"><%= question.escape('author_name') %></a>
    <% if (question.get('created_at')) { %>
      <span class="faded timeago" title="<%= question.get('created_at') %>"><%= date %></span>
    <% } %>
  </p>
  <div class="tagged tags-index"></div>

  <div class="answer-form"></div>

  <h3>Answers</h3>
  <div class="answers-index"></div>

  <a href="#">Back to Questions</a>
</div>

<div class="col-md-4">
  <h3>Related Questions</h3>
  <div class="related-questions"></div>

</div>
