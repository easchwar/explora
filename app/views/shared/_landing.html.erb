<div class="sign-in-canvas clearfix">
  <div class="full-size">

  </div>
  <div class="sign-in-backdrop">
    <div class="col-md-4 col-md-offset-4">
      <h1><%= button_text %></h1>
    </div>
    <div class="sign-in col-md-4 col-md-offset-4">
      <%= render 'shared/form', user: user, url: url, button_text: button_text, type: type %>
    </div>
    <br>
    <div class="col-md-4 col-md-offset-4">
      <br>
      <% if type == "session" %>
        <span class="faded">Not a member?</span>
        <a class="auth-link" href="/users/new">Create Account</a>
      <% else %>
        <span class="faded">Already a member?</span>
        <a class="auth-link" href="/session/new">Sign In</a>
      <% end %>
    </div>
  </div>
</div>
